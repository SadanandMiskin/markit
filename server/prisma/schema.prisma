generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Company {
  id                     Int         @id @default(autoincrement())
  name                   String
  description            String
  type                   String
  customers              Customers[]
  aiMessage              AiMarketingMessage[]
}

model Customers{
  id                     Int         @id @default(autoincrement())
  name                   String
  email                  String
  marketing_type         String
  company                Company     @relation(fields: [compId], references: [id], onDelete: Cascade)
  compId                 Int
}

model AiMarketingMessage {
  id                    Int         @id @default(autoincrement())
  marketingDraft        String
  company               Company     @relation(fields: [compId], references: [id])
  compId                Int
}



